# =============================================================================
# .env.example
# =============================================================================
# Use this file as a template for your environment variables.
# -----------------------------------------------------------------------------
# How to use:
# - For local development, copy the LOCAL DEVELOPMENT section to your `.env`.
# - For local overrides/secrets, copy the LOCAL OVERRIDES section to your `.env.local`.
# - For production, copy the PRODUCTION section to your `.env.production`.
# -----------------------------------------------------------------------------

# =============================================================================
# LOCAL DEVELOPMENT (.env)
# =============================================================================
# Defaults for local development (Supabase Docker: npm run db:start)
# Prisma requires these to be in the .env, so don't move them to .env.local
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:54322/postgres"
DIRECT_URL="postgresql://postgres:postgres@127.0.0.1:54322/postgres"

# =============================================================================
# LOCAL OVERRIDES (.env.local)
# =============================================================================
# Use this for secrets or to override any value above on your machine only.
# Supabase API (get these from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY="[YOUR_PRODUCTION_ANON_KEY]"

NODE_ENV="development"

# =============================================================================
# PRODUCTION (.env.production)
# =============================================================================
# Set these in your hosting provider's environment dashboard.
# -----------------------------------------------------------------------------
# DATABASE_URL: Use the Transaction Pooler URI from Supabase dashboard
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:6543/postgres"

# DIRECT_URL: Use the Session Pooler URI from Supabase dashboard
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:5432/postgres"

# Supabase API (get these from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY="[YOUR_PRODUCTION_ANON_KEY]"

NODE_ENV="production"